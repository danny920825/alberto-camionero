---
import servicios from '../data/Services.json';
---

<section id="servicios" class="min-h-screen bg-gray-100 p-4 md:p-8 md:my-8">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-4xl font-bold mb-10 text-center">Nuestros Servicios</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {servicios.servicios.map((servicio) => (
        <div class="bg-white p-6 rounded shadow-md hover:shadow-xl transition-shadow duration-300">
          <h2 class="text-2xl font-semibold mb-4">{servicio.nombre}</h2>
          <p>{servicio.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>

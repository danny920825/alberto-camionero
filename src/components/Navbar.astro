---
const menuItems = [
  { label: 'Servicios', path: '#servicios' },
  { label: 'Acerca de', path: '#about' },
  { label: 'Contacto', path: '#contact' }
];
---
<script>
  // ObtÃ©n una referencia al botÃ³n de menÃº y al menÃº desplegable
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  // Agrega un evento click al botÃ³n de menÃº
  menuButton.addEventListener('click', () => {
    // Alternar la clase 'hidden' para mostrar u ocultar el menÃº en pantallas pequeÃ±as
    mobileMenu.classList.toggle('hidden');
  });
</script>

<header class="fixed z-10 w-full flex justify-between items-center h-20 shadow-md px-4 bg-blue-500">
  <a href="/" class="font-bold text-white">Alberto Camionero ðŸ˜‚</a>
  <nav class="hidden md:flex md:items-center md:space-x-4">
    <ul class="flex justify-around gap-4">
      {menuItems.map(item => (
        <li class="text-white font-semibold hover:underline hover:cursor-pointer">
          <a href={item.path}>{item.label}</a>
        </li>
      ))}
    </ul>
  </nav>
  <button id="menuButton"  class="md:hidden text-white">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M2.5 2.5A.5.5 0 0 1 3 2h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5v-1zm0 4A.5.5 0 0 1 3 6h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5v-1zm0 4a.5.5 0 0 1 .5-.5H13a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5v-1zm-1-6a.5.5 0 0 1 .5-.5H3a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-1z"/>
    </svg>
  </button>
  <nav id="mobileMenu" class="md:hidden absolute top-20 left-0 w-full bg-blue-500 py-4 hidden">
    <ul class="flex flex-col items-center mt-4 space-y-4">
      {menuItems.map(item => (
        <li class="text-white font-semibold hover:underline hover:cursor-pointer">
          <a href={item.path}>{item.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

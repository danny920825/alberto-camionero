<section id="contact" class="min-h-screen bg-gray-100 p-4 md:p-8 md:my-8 w-full md:w-4/5 mt-4">
  <div class="max-w-5xl px-2 md:w-1/3 mx-auto">
    <h1 class="text-4xl font-bold mb-10">Contáctanos</h1>

    <form class="mt-10" action="#" method="post">
      <div class="mb-6">
        <label for="name" class="font-semibold text-center md:text-start block mb-2 text-lg">Nombre:</label>
        <input type="text" id="name" name="name" placeholder="Tu nombre" class="w-full px-4 py-2 rounded-md border focus:border-blue-500 focus:outline-none">
      </div>

      <div class="mb-6">
        <label for="email" class="font-semibold text-center md:text-start block mb-2 text-lg">Correo:</label>
        <input type="email" id="email" name="email" placeholder="tucorreo@ejemplo.com" class="w-full px-4 py-2 rounded-md border focus:border-blue-500 focus:outline-none">
      </div>

      <div class="mb-6">
        <label for="message" class="font-semibold text-center md:text-start block mb-2 text-lg">Mensaje:</label>
        <textarea id="message" name="message" rows="4" placeholder="Escribe tu mensaje aquí" class="w-full px-4 py-2 rounded-md border focus:border-blue-500 focus:outline-none"></textarea>
      </div>

      <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 transition-colors duration-300 flex justify-around">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-send" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M10 14l11 -11" />
          <path d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5" />
        </svg>
        &nbsp;
        <span>Enviar</span>
      </button>
    </form>
  </div>
</section>
